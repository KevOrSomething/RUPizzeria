<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pizzaandroidproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pepperoni_pizza"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pepperoni_pizza_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PizzaAndroidProject">
        <activity
            android:name=".CurrentOrderActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/current_order_button_label"
            android:exported="true" />
        <activity
            android:name=".StoreOrdersActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/store_orders_button_label"
            android:exported="true" />
        <activity
            android:name=".CustomizeActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/add_pizza_button_label"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>